<Window x:Class="TanuloiJegykezelo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tanulói Jegykezelő" Height="400" Width="450">
    <Grid>
        <!-- Tantárgy kiválasztása ComboBox -->
        <ComboBox x:Name="SubjectComboBox" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10">
            <ComboBoxItem Content="Matematika" />
            <ComboBoxItem Content="Fizika" />
            <ComboBoxItem Content="Irodalom" />
        </ComboBox>
        
        <!-- Jegy bevitele TextBox -->
        <TextBox x:Name="GradeTextBox" Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,10,0,0"/>

        <!-- Jegy hozzáadása gomb -->
        <Button Content="Jegy hozzáadása" Width="150" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="330,10,0,0" Click="OnAddGradeClick"/>

        <!-- Jegyek megjelenítése ListBox -->
        <ListBox x:Name="GradesListBox" Width="400" Height="200" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,50,0,0"/>

        <!-- Összes jegy megjelenítése gomb -->
        <Button Content="Összes jegy megjelenítése" Width="200" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,270,0,0" Click="OnShowAllGradesClick"/>
    </Grid>
</Window>
